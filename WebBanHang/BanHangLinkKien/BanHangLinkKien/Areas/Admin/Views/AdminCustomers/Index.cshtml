@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<BanHangLinkKien.Models.Customer>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <h5 class="card-header">Danh sách khách hàng : page @CurrentPage</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Họ và tên</th>
                    <th>Địa chỉ</th>
                    <th>Tỉnh/Thành</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if(Model != null)
                {
                    foreach(var item in Model)
                    {
                        <tr class="table-default">
                            <td><i class="fab fa-sketch fa-lg text-warning me-3"></i> @item.CustomerId</td>
                            <td>
                                <p>@item.FullName</p>
                                <p>@item.Phone</p>
                                <p>@item.Email</p>
                            </td>
                            <td>@item.Address</td>
                            <td>@item.Location.Name</td>
                            <td>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.CustomerId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.CustomerId"><i class="bx bx-trash me-1"></i> Details</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.CustomerId"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </td>

                           @* <td><span class="badge bg-label-primary me-1">Active</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>*@
                        </tr>
                    }
                }
              

            </tbody>
                   <!-- Basic Pagination -->
           
            <!--/ Basic Pagination -->
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <pager class="page-item" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index" />
            </ul>
        </nav>

    </div>
</div>