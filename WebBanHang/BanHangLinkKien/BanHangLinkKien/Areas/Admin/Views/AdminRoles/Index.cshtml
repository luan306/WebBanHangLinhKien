@model IEnumerable<BanHangLinkKien.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
     <div class="card-body" style="position:absolute; right:0; ">
        
        <div class="demo-inline-spacing">
            <a class="btn btn-primary" asp-controller="AdminRoles" asp-action="Create">Add Roles</a>
        </div>
    </div>
    <h5 class="card-header">Account</h5>
    <div class="">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.RoleId</strong></td>
                            <td>
                                @item.RoleName
                            </td>
                            <td>
                                @item.Descriptiton
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId"><i class="bx bx-trash me-1"></i> Details</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>
</div>

